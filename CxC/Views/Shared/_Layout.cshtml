<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        <style type="text/css" >
        .header {
            width: 100%;
            height: 10px;
            background-color: transparent;
            background-size: cover;
            color: #404040;
        }

        body {
            background-image: linear-gradient(30deg,#b3f862,#7bbd8d);
            background-size: auto;
            background-repeat: no-repeat;
            height: 2000px;
            width: 100%;
        }

        .container body-content {
            background-color: #008000;
            background-size: cover;
            position: sticky;
        }

        .navbar-inverse {
            background-color: transparent;
            border-color: transparent;
        }

        #icon {
            float: right;
            color: #000000 !important;
            font-size: large;
        }

        #MainIcon {
            float: left;
            font-size: x-large;
        }

        .navbar-collapse.collapse ul li:hover {
            background: #008000;
            border-radius: 50px;
            transition: 1s;
            opacity: 2;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CxC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Asiento Contable", "Index", "AsientoContables")</li>
                    <li>@Html.ActionLink("Tipo de Documentos", "Index", "TipDocs")</li>
                    <li>@Html.ActionLink("Transacciones", "Index", "Transaccions")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
